@import nib

.selectable
  outline none
  position relative
  
  &:focus > .options
    display block
    
  > .options
    display none
    overflow hidden
    absolute top 100% right 0
    z-index 1000
    border 1px solid #ccc
    
    > .option
      padding 1px 3px 1px 20px
      cursor pointer
      white-space nowrap
      
      &.is-selected
        background url(../img/icons.png) no-repeat 5px -577px
      &:hover
        background-color #ccc
        
    > .label
      padding 3px 5px
      color #888
      font-style italic
  
    > .separator
      margin 4px 0px
      height 1px
      background #bbb

      
.infobar-outline
  height 24px
  background #e3e3e3
  
  > .selector
    padding 4px 6px
    font-size 13px
    font-weight bold

  &.is-empty
    > .selector
    > .outline-info
      visibility hidden

.element-tools
  padding 0px 2px 0px 3px
  border-radius 5px
  height 10px
  
  > .parent-selector-cont
  > .media-selector-cont
  > .pseudo-selector-cont
    display table-cell
     
  > .element-rules
    padding 3px
    visibility hidden
    > .inner
      padding 0px 3px
      border-radius 3px
      color #666
      background-color #fff
    
    .has-ruleinfo &
      visibility visible
    
  .selectable
    height 17px
    width 15px
    margin-top 3px
    
    > .options
      width 80px
      border thin solid #ccc
      background #ddd
      border-radius 3px
  

  .pseudo-selector
    background url(../img/icons.png) no-repeat 0px -711px
    margin 1px 0 0 3px

  .media-selector
    &:after
      font-size 21px
      content "â—³"
      
  .parent-selector
    width 18px
    background url(../img/icons.png) no-repeat 1px -728px
    
    > .options
      max-width 120px
      width auto
      > .option
        text-align right
        padding-left 5px  

.pseudo-indicator
  width 15px
  display none
  padding-top 4px
  cursor pointer
  
  &:after
    content ">"
    display block
    width 11px
    height 12px
    margin 1px
    border thin solid #9e9e9e
    border-radius 4px
    font-size 9px
    line-height 140%
    text-align center
    color #554a59
    
  &.hover:after
    content 'H'
    background-color #fcb2b2
  &.focus:after
    content 'F'
    background-color #f9d427
  &.active:after
    content 'A'
    background-color #8fdb93
  &.visited:after
    content 'V'
    background-color #adb2f4
  
  &.is-selected
    display table-cell
    
  &:hover
    opacity .7
