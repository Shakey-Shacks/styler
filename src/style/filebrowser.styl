@import nib

empty_file()
  > .expand-bullet
  > .name
    display none
  &.is-dir
    padding 0
    > .items
      border none
      margin 0

.filebrowser
  box-flex 1
  overflow-y auto
  min-height 200px
  position relative
  background-color #fff
  padding 0 7px
  
  &:focus
    outline none

  .is-editormode &
    display none
    
  > .file-item
    empty_file()
    
.file-item
  cursor: pointer
  box-sizing border-box
  overflow hidden
  position relative
  clear both
  
  &.is-empty
    empty_file()
      
  .expand-bullet
    float left
    width 15px
    height 26px
    margin-left 5px
    background url(../img/icons.png) 0px -285px no-repeat
    opacity .7

  &.is-dir
    padding-top 2px
    > .items
      clear both
      border-top 1px solid #eee
      margin-bottom 7px
    
    > .name
      padding-left 24px
      font-size 14px
      background url(../img/icons.png) 0px -471px no-repeat
      
  &.is-file
    border-bottom 1px solid #eee
    
    > .name
      padding-left 20px
      background url(../img/icons.png) 0px -495px no-repeat
      
    > .size
    > .lastmod
      float right
      color #666
      width 150px
      padding 5px 0
      text-align center
      

  > .name
    font-weight bold
    white-space nowrap
    text-overflow ellipsis
    color #333
    overflow hidden
    float left
    padding-top 5px
    padding-bottom 5px
    
    > .ext
      color #888
      
  > .active-indicator
    background #fdd
    position absolute
    bottom 12px
    padding 1px 5px
    color #666
    border-radius 3px
    left 12px

  > .open-indicator
    @extends .file-item > .active-indicator
    right 15px
    left auto
    background #dfd
    
  &.is-selected
    background #f2f2f2
    > .items
      background #fff
  
