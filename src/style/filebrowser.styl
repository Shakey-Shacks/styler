@import nib

.filebrowser
  box-flex 1
  overflow-y auto
  min-height 200px
  position relative
  background-color #fff
  padding 0 10px
  
  &:focus
    outline none

  .is-editormode &
    display none
    
  > .file-item
    > .name
    > .expand-bullet
      display none
    &.is-dir
      > .items
        border none

.file-item
  //height 68px
  //float left
  //text-align: center
  cursor: pointer
  box-sizing border-box
  overflow hidden
  position relative
  clear both
  
  &.is-empty
    > .expand-bullet
    > .name
      display none
    &.is-dir
      > .items
        border none
        margin 0
      
  .expand-bullet
    float left
    width 16px
    height 16px
    background url(../img/icons.png) 0px -286px no-repeat
    opacity .7

  &.is-dir
    > .items
      clear both
      border-top 1px solid #eee
      margin-bottom 7px
    
    > .name
      padding-left 20px
      font-size 14px
      background url(../img/icons.png) 0px -472px no-repeat
      
  &.is-file
    border-bottom 1px solid #eee
    
    > .name
      padding-left 20px
      background url(../img/icons.png) 0px -495px no-repeat
      
    > .size
    > .lastmod
      float right
      color #666
      width 150px
      padding 5px 0
      text-align center
      

  > .name
    font-weight bold
    white-space nowrap
    text-overflow ellipsis
    color #333
    overflow hidden
    float left
    padding-top 5px
    padding-bottom 5px
    
    > .ext
      color #888

  > .inner
    border: 1px solid #ccc
    border-radius 4px
    margin 2px 4px
    box-sizing border-box
    padding 10px
    height 60px
    box-shadow 1px 1px 2px #ccc
    
    &.is-helper
      opacity .6
  

      
    > .active-indicator
      background #fdd
      position absolute
      bottom 12px
      padding 1px 5px
      color #666
      border-radius 3px
      left 12px
  
    > .open-indicator
      @extends .file-item > .inner > .active-indicator
      right 15px
      left auto
      background #dfd

    &:hover
      background-color #f3f6fc
    
  &.is-selected > .inner
    background #f3f6fc
    border 1px solid #999
  
